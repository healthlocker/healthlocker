<div class="ma3 ma4-m ma4-l">
  <h3 class="tc">Goals</h3>
  <%= link "Add new", to: goal_path(@conn, :new) %>
  <%= for goal <- @goals do %>
  <a href="/goal/<%= goal.id %>">
    <div class="bg-light-silver black">
      <h4 class="pv2 ph2 ph3-m ph4-l f5 f4-m f4-l lh-copy black">
        <%= markdown String.trim_trailing(goal.content, " #Goal") %>
      </h4>
    </div>
  </a>
  <% end %>
  <%= link "Back to Toolkit", to: toolkit_path(@conn, :index), class: "mt4 dim ph3 fr" %>
</div>
