<div class="ma3 ma4-m ma4-l">
  <h3 class="tc">Log in</h3>
  <section class="mw7 center">
    <%= form_for @conn, login_path(@conn, :create), [as: :login, class: "mw6 bg-white br2 br--bottom shadow-1--bottom pa3 mv3 ba b--black-10 center"], fn f -> %>
      <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
        <div>
          <%= text_input f, :email, placeholder: "Email", class: "pa3 input-reset ba b--black-40 w-100" %>
        </div>

        <div class="mt3">
          <%= text_input f, :password, placeholder: "Password", class: "pa3 input-reset ba b--black-40 w-100", type: :password %>
        </div>
      </fieldset>

      <div>
        <%= submit "Sign in", class: "fw1 ph3 pv3 input-reset white bg-pink b--none br1 pointer f5 w-100" %>
      </div>

      <div class="lh-copy mt3">
        <a href="#0" class="f6 link dim black-60 db">Sign up</a>
        <a href="#0" class="f6 link dim black-60 db">Forgot your password?</a>
      </div>
    <% end %>
  </section>
</div>
