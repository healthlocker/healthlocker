<div class="ma3 ma4-m ma4-l">
  <h3 class="hl-darkBlue tc">Log in</h3>
  <section class="mw7 center">
    <div class="bb b--black-20 pb4 mt4">
      <span class="mt0">Not an existing user?</span>
      <div class="dib pl3">
        <%= link_to("Sign up", to: user_path(@conn, :new)) %>
      </div>
    </div>
    <%= form_for @conn, login_path(@conn, :create), [as: :login, class: "mw6 br2 mv3 center"], fn f -> %>
      <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
        <div>
          <%= label f, :email, "Email address", class: "f5 b db mb2" %>
          <%= text_input f, :email, class: "ph3 input-reset bn hl-bg-grey w-100" %>
        </div>

        <div class="mt4">
          <%= label f, :password, "Password", class: "f5 b db mb2" %>
          <%= text_input f, :password, class: "ph3 input-reset bn hl-bg-grey w-100", type: :password %>
        </div>
      </fieldset>
      <div class="lh-copy">
        <%= link_to("Forgotten your password?", to: password_path(@conn, :new)) %>
      </div>
      <div class="tr mt2">
        <%= submit_primary "Log in" %>
      </div>
    <% end %>
  </section>
</div>
